{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "settings": {
      "import/resolver": {
        "webpack": { "config": "./webpack/webpack.prod.config.js" }
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "no-unused-vars": ["error", { "vars": "local", "args": "after-used" }],
      "no-confusing-arrow": 0,
      "global-require": 0,
      "import/no-named-as-default": 0
    }
}
